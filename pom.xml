<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.wikimedia.gobblin</groupId>
    <artifactId>gobblin-wmf</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>WMF specific extenstions to Gobblin</name>
    <description></description>
    <modules>
        <module>gobblin-wmf-core</module>
    </modules>
    <properties>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <gobblin.version>0.15.0</gobblin.version>
    </properties>
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.wikimedia</groupId>
                <artifactId>eventutilities</artifactId>
                <version>1.0.8</version>
            </dependency>
            <dependency>
                <groupId>org.apache.gobblin</groupId>
                <artifactId>gobblin-api</artifactId>
                <version>${gobblin.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.gobblin</groupId>
                <artifactId>gobblin-cluster</artifactId>
                <version>${gobblin.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.gobblin</groupId>
                <artifactId>gobblin-codecs</artifactId>
                <version>${gobblin.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.gobblin</groupId>
                <artifactId>gobblin-core</artifactId>
                <version>${gobblin.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.gobblin</groupId>
                <artifactId>gobblin-metrics</artifactId>
                <version>${gobblin.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.gobblin</groupId>
                <artifactId>gobblin-metastore</artifactId>
                <version>${gobblin.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.gobblin</groupId>
                <artifactId>gobblin-api</artifactId>
                <version>${gobblin.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.gobblin</groupId>
                <artifactId>gobblin-runtime</artifactId>
                <version>${gobblin.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.gobblin</groupId>
                <artifactId>gobblin-utility</artifactId>
                <version>${gobblin.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.gobblin</groupId>
                <artifactId>gobblin-kafka-1</artifactId>
                <version>${gobblin.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.kafka</groupId>
                <artifactId>kafka-clients</artifactId>
                <version>2.4.1</version><!-- TODO: check version -->
            </dependency>
            <dependency>
                <groupId>org.projectlombok</groupId>
                <artifactId>lombok</artifactId>
                <version>1.18.18</version>
            </dependency>
        </dependencies>
    </dependencyManagement>
    <repositories>
        <repository>
            <releases>
                <enabled>true</enabled>
                <checksumPolicy>fail</checksumPolicy>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
            <id>wikimedia.releases</id>
            <name>Wikimedia Release Repository</name>
            <url>https://archiva.wikimedia.org/repository/releases</url>
        </repository>
        <repository>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
            <id>confluent.io</id>
            <name>Confluent</name>
            <url>http://packages.confluent.io/maven/</url>
        </repository>
        <repository>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
            <id>linkedin</id>
            <name>LinkedIn</name>
            <url>https://linkedin.jfrog.io/artifactory/open-source/</url>
        </repository>
    </repositories>
</project>
